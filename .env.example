# =================================
# 智能企业协作平台 - 环境配置模板
# =================================

# 基础配置
DEBUG=true
SECRET_KEY=your-super-secret-key-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# 数据库配置
DATABASE_URL=postgresql://collab_user:collab_password@localhost:5432/collab_platform
DATABASE_NAME=collab_platform
DATABASE_USER=collab_user
DATABASE_PASSWORD=collab_password
DATABASE_HOST=localhost
DATABASE_PORT=5432

# Redis配置
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Celery配置
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# AI服务配置
AI_SERVICE_URL=http://localhost:8002
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-3.5-turbo
ANTHROPIC_API_KEY=your-anthropic-api-key
HUGGINGFACE_TOKEN=your-huggingface-token

# 向量数据库配置
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=your-weaviate-key

# Elasticsearch配置
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=changeme

# MinIO文件存储配置
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=collab-platform
MINIO_USE_SSL=false

# JWT配置
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30
JWT_REFRESH_EXPIRE_DAYS=7

# OAuth配置
GOOGLE_OAUTH2_CLIENT_ID=your-google-client-id
GOOGLE_OAUTH2_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# 邮件配置
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password
EMAIL_USE_TLS=true
DEFAULT_FROM_EMAIL=noreply@collaboration-platform.com

# 短信配置
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=+1234567890

# 监控配置
SENTRY_DSN=your-sentry-dsn
PROMETHEUS_ENABLED=true
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831

# WebRTC配置
TURN_SERVER_URL=turn:your-turn-server.com:3478
TURN_SERVER_USERNAME=your-turn-username
TURN_SERVER_CREDENTIAL=your-turn-password
STUN_SERVER_URL=stun:stun.l.google.com:19302

# 协作服务配置
COLLABORATION_MAX_USERS_PER_DOCUMENT=50
COLLABORATION_SYNC_INTERVAL=100
COLLABORATION_CONFLICT_RESOLUTION=last-write-wins

# 安全配置
ENCRYPTION_KEY=your-32-byte-encryption-key
RATE_LIMIT_PER_MINUTE=60
MAX_FILE_UPLOAD_SIZE=100MB
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# CDN配置
CDN_URL=https://cdn.your-domain.com
STATIC_URL=/static/
MEDIA_URL=/media/

# 日志配置
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/app/logs/app.log

# 环境标识
ENVIRONMENT=development
VERSION=1.0.0

# 外部服务配置
SLACK_WEBHOOK_URL=your-slack-webhook-url
TEAMS_WEBHOOK_URL=your-teams-webhook-url

# 性能配置
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
REDIS_POOL_SIZE=50
GUNICORN_WORKERS=4
GUNICORN_THREADS=2

# 特性开关
FEATURE_AI_ASSISTANT=true
FEATURE_REAL_TIME_COLLABORATION=true
FEATURE_VIDEO_CALL=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_THIRD_PARTY_INTEGRATIONS=true